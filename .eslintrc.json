{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-shadow": "error",
    "no-param-reassign": ["error", { "props": false }],
    "arrow-parens": ["error", "as-needed"],
    "prettier/prettier": "error"
  }
}
